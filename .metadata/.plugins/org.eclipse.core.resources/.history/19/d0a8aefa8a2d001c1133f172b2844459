package 예제문제;
import java.util.Scanner;
public class javapro {
	public static void main(String[] args) {
		int num=0,갯수,sum=0,count=0;
		Scanner scanner=new Scanner(System.in);
		System.out.print("숫자 입력(-1 넣으면 그만):");
		num=scanner.nextInt();
		while(num!=-1) {
			count++;
			sum+=num;
			num=scanner.nextInt();
		}
		double ave=(double)sum/count;
		if(count!=0) {
			System.out.print("정수의 평균은 "+ave+"입니다.");
		}
		else {
			System.out.print("입력한 정수가 없습니다.");
		}
			
	}}